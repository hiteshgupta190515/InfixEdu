<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.studentmanagement">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".activity.TransportActivity"></activity>
        <activity android:name=".activity.DormitoryActivity" />
        <activity android:name=".activity.IssuedBookActivity" />
        <activity
            android:name=".activity.StudentLibraryActivity"
            android:parentActivityName=".activity.HomeActivity" />
        <activity android:name=".activity.StudentTeacherActivity" />
        <activity android:name=".activity.StudentSubjectActivity" />
        <activity
            android:name=".activity.NoticeActivity"
            android:parentActivityName=".activity.HomeActivity" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity
            android:name=".activity.NoticeDeatlsActivity"
            android:parentActivityName=".activity.NoticeActivity" />
        <activity android:name=".activity.HomeWorkActivity" />
        <activity android:name=".activity.ClassRoutineActivity" />
        <activity android:name=".activity.FeesActivity" />
        <activity
            android:name=".activity.ProfileActivity"
            android:parentActivityName=".activity.HomeActivity" />
        <activity android:name=".activity.ComplaintActivity" />
        <activity android:name=".activity.VisitorActivity" />
        <activity android:name=".activity.AdminSectionActivity" />
        <activity android:name=".activity.InventoryActivity" />
        <activity
            android:name=".activity.LibraryActivity"
            android:parentActivityName=".activity.StudentLibraryActivity" />
        <activity android:name=".activity.StudentListActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.HomeActivity" />
        <activity android:name=".activity.BookDetailsActivity" />
        <activity
            android:name=".activity.StudentInformation"
            android:parentActivityName=".activity.StudentListActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>