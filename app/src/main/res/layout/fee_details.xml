<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admission fees - class 5"
        android:textSize="18dp"
        android:textColor="#415094"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:id="@+id/txtFeeTitle"
        android:fontFamily="@font/poppins_medium"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/txtFeeTitle"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:id="@+id/linear"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textSize="13dp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#727FC8"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$1523"
                android:textSize="12dp"
                android:id="@+id/amount"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/profile_light_text_color"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discount"
                android:textSize="13dp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#727FC8"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$5000.0"
                android:textSize="12dp"
                android:id="@+id/feeDiscount"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/profile_light_text_color"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fine"
                android:textSize="13dp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#727FC8"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$400.0"
                android:textSize="12dp"
                android:id="@+id/feeFine"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/profile_light_text_color"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paid"
                android:textSize="13dp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#727FC8"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$4578"
                android:textSize="12dp"
                android:textColor="@color/profile_light_text_color"
                android:id="@+id/paid"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_light"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance"
                android:textSize="13dp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#727FC8"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35000.0"
                android:textSize="12dp"
                android:id="@+id/feeBalance"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/profile_light_text_color"
                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>