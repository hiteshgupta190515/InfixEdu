<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General Maths Part 01"
        android:textSize="16dp"
        android:textColor="#415094"
        android:layout_alignParentStart="true"
        android:id="@+id/txtLibBookTitle"
        android:maxLines="1"
        android:fontFamily="@font/poppins_medium"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Travor James. | Alpha Publications"
        android:textSize="13dp"
        android:textStyle="bold"
        android:maxLines="1"
        android:id="@+id/txtLibSubTitle"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/profile_light_text_color"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Subject"
            android:fontFamily="@font/poppins_medium"
            android:textStyle="bold"
            android:textSize="13dp"
            android:textColor="#727FC8"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Book No."
            android:fontFamily="@font/poppins_medium"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="#727FC8"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="13dp"
            android:text="Quantity"
            android:fontFamily="@font/poppins_medium"
            android:textStyle="bold"
            android:textColor="#727FC8"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Price"
            android:fontFamily="@font/poppins_medium"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="#727FC8"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Reck No"
            android:fontFamily="@font/poppins_medium"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="#727FC8"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Maths"
            android:maxLines="2"
            android:textSize="13dp"
            android:id="@+id/libSubject"
            android:textColor="#727FC8"
            android:fontFamily="@font/poppins_light"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="B - 15"
            android:textSize="13dp"
            android:id="@+id/libBookNo"
            android:textColor="#727FC8"
            android:fontFamily="@font/poppins_light"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="27"
            android:textSize="13dp"
            android:id="@+id/libQuantity"
            android:textColor="#727FC8"
            android:fontFamily="@font/poppins_light"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="$10.00"
            android:textSize="13dp"
            android:id="@+id/libprice"
            android:textColor="#727FC8"
            android:fontFamily="@font/poppins_light"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="09"
            android:textSize="13dp"
            android:id="@+id/libAddOn"
            android:textColor="#727FC8"
            android:fontFamily="@font/poppins_light"
            />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd"
        android:layout_marginTop="20dp"
        />

</LinearLayout>