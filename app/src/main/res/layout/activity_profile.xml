<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ProfileActivity"
    android:weightSum="6"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/toolbar_gradient"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:theme="@style/ThemeOverlay.AppCompat">

        <TextView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="#E4DCDC"
            android:textSize="20sp" />
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:id="@+id/relative_layout"
        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/student_poster"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:transitionName="profile"
            android:src="@mipmap/student_face"
            app:civ_border_width="0dp" />


        <TextView
            android:id="@+id/student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/student_poster"
            android:fontFamily="@font/neosanspro_medium"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="Mamun Hossain"
            android:textColor="#415094"
            android:transitionName="name" />

        <TextView
            android:id="@+id/student_class_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/student_name"
            android:layout_marginLeft="16dp"
            android:text="class : 1  |  Section: A"
            android:textColor="#727FC8"
            android:layout_toRightOf="@id/student_poster"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceSmall" />

        <TextView
            android:id="@+id/student_roll_adm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/student_class_section"
            android:layout_toRightOf="@id/student_poster"
            android:layout_marginLeft="16dp"
            android:text="Roll : 1  |  Admission: 9875487"
            android:textColor="@color/profile_light_text_color"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceSmall" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/student_roll_adm"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/personal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="PERSONAL"
                android:textSize="10dp"
                android:textColor="#415094" />

            <TextView
                android:id="@+id/parents"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="PARENTS"
                android:textSize="10dp"
                android:textColor="#415094" />

            <TextView
                android:id="@+id/transport"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TRAMSPORT"
                android:textSize="10dp"
                android:textColor="#415094" />

            <TextView
                android:id="@+id/others"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="OTHERS"
                android:textSize="10dp"
                android:textColor="#415094" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.5"
        android:id="@+id/profile_fragmengt_container"
        />


</LinearLayout>