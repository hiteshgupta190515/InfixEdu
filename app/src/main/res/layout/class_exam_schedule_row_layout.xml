<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:id="@+id/linear"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject"
                android:textSize="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/profile_light_text_color"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bangla"
                android:textSize="10dp"
                android:id="@+id/txtSubjectName"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/profile_light_text_color"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="2dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room No"
                android:textSize="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/profile_light_text_color"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="103"
                android:textSize="10dp"
                android:id="@+id/txtClsRoomNo"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/profile_light_text_color"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="2dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textSize="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/profile_light_text_color"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-05-31"
                android:textSize="10dp"
                android:id="@+id/txtClsExamDate"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/profile_light_text_color"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="2dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                android:textSize="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/profile_light_text_color"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:00:00"
                android:textSize="10dp"
                android:id="@+id/txtClsExamStart"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/profile_light_text_color"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="2dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End"
                android:textSize="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/profile_light_text_color"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:00:00"
                android:textSize="10dp"
                android:id="@+id/txtClsExamEnd"
                android:textColor="@color/profile_light_text_color"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_light"
                />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd"
        android:layout_margin="10dp"
        android:layout_below="@+id/linear"
        />

</RelativeLayout>