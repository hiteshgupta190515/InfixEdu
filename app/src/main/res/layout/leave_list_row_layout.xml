<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Casual Leave"
        android:textSize="16dp"
        android:textColor="#415094"
        android:layout_margin="5dp"
        android:maxLines="1"
        android:layout_alignParentStart="true"
        android:id="@+id/txtLeaveTitle"
        android:fontFamily="@font/poppins_medium"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"
        android:textSize="16dp"
        android:textColor="#415094"
        android:layout_margin="5dp"
        android:maxLines="1"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:id="@+id/txtLeaveView"
        android:fontFamily="@font/poppins_medium"
        />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/txtLeaveTitle"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="From"
                android:textColor="@color/profile_light_text_color"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/from_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_light"
                android:text="05.12.2000"
                android:textColor="@color/profile_light_text_color"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="To"
                android:textColor="@color/profile_light_text_color"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/to_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_light"
                android:text="05.12.2000"
                android:textColor="@color/profile_light_text_color"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Apply Date"
                android:textColor="@color/profile_light_text_color"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/apply_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_light"
                android:text="05.12.2000"
                android:textColor="@color/profile_light_text_color"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Status"
                android:textColor="@color/profile_light_text_color"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/green"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:layout_marginEnd="3dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="Approved"
                android:textColor="#fff"
                android:textSize="10dp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd"
        android:layout_margin="10dp"
        android:layout_below="@+id/linear"
        />

</RelativeLayout>