<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relative_layout"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/student_poster"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:transitionName="profile"
        app:civ_border_width="0dp" />


    <TextView
        android:id="@+id/student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/student_poster"
        android:fontFamily="@font/poppins_medium"
        android:transitionName="name"
        android:textColor="@color/profile_light_text_color"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="Mamun Hossain"/>

    <TextView
        android:id="@+id/student_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/student_name"
        android:layout_marginLeft="16dp"
        android:text="class : eight"
        android:textColor="@color/profile_light_text_color"
        android:layout_toRightOf="@id/student_poster"
        android:fontFamily="@font/poppins_light"
        android:textAppearance="?android:textAppearanceSmall" />

    <View
        android:id="@+id/crew_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/student_poster"
        android:layout_marginTop="16dp"
        android:background="#ddd"
        />


</RelativeLayout>